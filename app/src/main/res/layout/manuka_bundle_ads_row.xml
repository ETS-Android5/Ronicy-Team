<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_10sdp"
    android:background="@color/bundle_ads_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_10sdp"
        android:paddingStart="@dimen/_8sdp"
        android:paddingEnd="@dimen/_8sdp">

        <ImageView
            android:id="@+id/myaddsImage"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_6sdp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/image"
            android:scaleType="centerInside"
            android:src="@drawable/spinner_48_inner_holo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/myaddsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/loading"
                android:textColor="@color/colorBlackText"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/myaddsPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/loading"
                android:textColor="@color/colorGreen"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/myaddsDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_2sdp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:text="@string/loading"
                android:textSize="@dimen/_10sdp" />

            <ImageView
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@drawable/icon_urgent_bundle"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_22sdp"/>

            <TextView
                android:id="@+id/myaddsAprovedStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorDangerDark"
                android:elevation="@dimen/_4sdp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:paddingStart="@dimen/_16sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:text="@string/loading"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/myaddsUaprovedReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWarning"
        android:gravity="center"
        android:padding="@dimen/_4sdp"
        android:text="@string/loading"
        android:textColor="@color/colorBlackText"
        android:textSize="@dimen/_10sdp"
        android:visibility="gone" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/colorWhiteLite" />

</LinearLayout>