<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6ecff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragment.Account">

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/accountMain"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/started"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:background="#ffffff"
                android:drawableLeft="@drawable/ic_baseline_event_24"
                android:drawablePadding="20dp"
                android:elevation="4dp"
                android:fontFamily="@font/droid_sans"
                android:paddingLeft="6dp"
                android:text="Get started with ikman"
                android:textSize="18sp"
                android:textAlignment="textStart"
                android:textAllCaps="false"></Button>

        </LinearLayout>

        <TextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:text="Testing Account"
            android:fontFamily="sans-serif-medium"
            android:textSize="24sp"></TextView>

        <Button
            android:id="@+id/myads"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginBottom="4dp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/ic_baseline_filter_24"
            android:drawablePadding="20dp"
            android:elevation="4dp"
            android:fontFamily="@font/droid_sans"
            android:paddingLeft="6dp"
            android:text="My Ads"
            android:textSize="18sp"
            android:textAlignment="textStart"
            android:textAllCaps="false"></Button>

        <Button
            android:id="@+id/accountMember"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginBottom="4dp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/ic_baseline_event_24"
            android:drawablePadding="20dp"
            android:elevation="4dp"
            android:fontFamily="@font/droid_sans"
            android:paddingLeft="6dp"
            android:text="My membership"
            android:textSize="18sp"
            android:textAlignment="textStart"
            android:textAllCaps="false"></Button>

        <Button
            android:id="@+id/favourite"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginBottom="4dp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/ic_baseline_star_24"
            android:drawablePadding="20dp"
            android:elevation="4dp"
            android:fontFamily="@font/droid_sans"
            android:paddingLeft="6dp"
            android:text="Favourites"
            android:textSize="18sp"
            android:textAlignment="textStart"
            android:textAllCaps="false"></Button>

        <Button
            android:id="@+id/myprofile"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="20dp"
            android:elevation="4dp"
            android:fontFamily="@font/droid_sans"
            android:paddingLeft="6dp"
            android:text="My profile"
            android:textSize="18sp"
            android:textAlignment="textStart"
            android:textAllCaps="false"></Button>


        <Button
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginBottom="4dp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/ic_baseline_verified_user_24"
            android:drawablePadding="20dp"
            android:drawableTint="#a6a6a6"
            android:elevation="4dp"
            android:fontFamily="@font/droid_sans"
            android:paddingLeft="6dp"
            android:text="Stay safe"
            android:textAlignment="textStart"
            android:textSize="18sp"
            android:textAllCaps="false"></Button>

        <Button
            android:id="@+id/faq"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginBottom="4dp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/ic_baseline_battery_unknown_24"
            android:drawablePadding="20dp"
            android:elevation="4dp"
            android:fontFamily="@font/droid_sans"
            android:paddingLeft="6dp"
            android:text="FAQ"
            android:textAlignment="textStart"
            android:textSize="18sp"
            android:textAllCaps="false"></Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginBottom="4dp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/ic_baseline_slideshow_24"
            android:drawablePadding="20dp"
            android:drawableTint="#a6a6a6"
            android:elevation="4dp"
            android:fontFamily="@font/droid_sans"
            android:paddingLeft="6dp"
            android:text="How to sell fast"
            android:textSize="18sp"
            android:textAlignment="textStart"
            android:textAllCaps="false"></Button>

        <Button
            android:id="@+id/donateUs"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginBottom="4dp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/ic_baseline_double_arrow_24"
            android:drawablePadding="20dp"
            android:elevation="4dp"
            android:fontFamily="@font/droid_sans"
            android:paddingLeft="6dp"
            android:text="Donate us"
            android:textSize="18sp"
            android:textAlignment="textStart"
            android:textAllCaps="false"></Button>

        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginBottom="68dp"
            android:layout_marginTop="8dp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/ic_baseline_power_settings_new_24"
            android:drawablePadding="20dp"
            android:elevation="4dp"
            android:fontFamily="@font/droid_sans"
            android:paddingLeft="6dp"
            android:text="Log out"
            android:textSize="18sp"
            android:textAlignment="textStart"
            android:textAllCaps="false"></Button>

    </LinearLayout>
</ScrollView>