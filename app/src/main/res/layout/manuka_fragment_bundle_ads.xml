<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_8sdp"
    android:elevation="@dimen/_8sdp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/promotion_bundle_border"
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp">

            <ImageView
                android:id="@+id/checkbox"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0"
                android:background="@drawable/ic_checkbox_normal" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_8sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_52sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="top"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:background="@drawable/icon_urgent_bundle" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:gravity="start"
                        android:drawableEnd="@drawable/ic_baseline_info_24_bundle"
                        android:text="Bundle Ad"
                        android:textColor="@color/colorBlackText"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="From Rs 600.00"
                        android:textColor="@color/colorBlackText"
                        android:textSize="@dimen/_11sdp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:gravity="start"
                    android:text="Ad will be promoted as Urgent."
                    android:textColor="@color/colorBlackText"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:gravity="start"
                    android:text="Ad will appear higher under Similar Ads."
                    android:textColor="@color/colorBlackText"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:gravity="start"
                    android:text="Ad will appear in a light red color under similar ads."
                    android:textColor="@color/colorBlackText"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:gravity="start"
                    android:text="Learn more"
                    android:textColor="@color/com_facebook_blue"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

        </LinearLayout>

        <worker8.com.github.radiogroupplus.RadioGroupPlus
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/days3View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/promotion_bundle_border"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp">

                <RadioButton
                    android:id="@+id/days3Radio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/mainUiColour"
                    android:text="3 days"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Rs 700.00"
                    android:textColor="@color/colorGreenDark"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/days7View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/promotion_bundle_border"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp">

                <RadioButton
                    android:id="@+id/days7Radio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/mainUiColour"
                    android:text="7 days"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Rs 900.00"
                    android:textColor="@color/colorGreenDark"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/days15View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/promotion_bundle_border"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp">

                <RadioButton
                    android:id="@+id/days15Radio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/mainUiColour"
                    android:text="15 days"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Rs 1,340.00"
                    android:textColor="@color/colorGreenDark"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

            </LinearLayout>

        </worker8.com.github.radiogroupplus.RadioGroupPlus>

    </LinearLayout>

</androidx.cardview.widget.CardView>