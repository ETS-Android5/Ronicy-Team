<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorHome"
    android:orientation="vertical"
    tools:context=".ui.newPost.CategorySelected">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/manuka_posting_allowance" />


        <TextView
            android:id="@+id/allCatSeleted"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/_14sdp"
            android:paddingEnd="@dimen/_14sdp"
            android:text="@string/all_categories"
            android:textColor="#b3b3b3"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/allServiceSeleted"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/_14sdp"
            android:paddingEnd="@dimen/_14sdp"
            android:text="@string/sell_an_item"
            android:textColor="#b3b3b3"
            android:textSize="@dimen/_14sdp" />

        <LinearLayout
            android:id="@+id/locationSelectedLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:background="#0066ff">

            <ImageView
                android:id="@+id/selectedCategoryImage"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/image"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/spinner_48_inner_holo" />

            <TextView
                android:id="@+id/selectedCategoryTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingStart="@dimen/_4sdp"
                android:paddingEnd="@dimen/_4sdp"
                android:text="@string/loading"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_14sdp" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>